general {
        colors = false
        interval = 5
}
order += "ethernet _first_"
order += "wireless _first_"
order += "battery all"
order += "tztime local"

wireless _first_ {
        format_up = "[ W: (%quality at %essid) ]"
        format_down = "[ W: (NULL) ]"
}

ethernet _first_ {
        format_up = "[ E: (%speed) ]"
        format_down = "[ E: (NULL) ]"
}

battery all {
        format = "[ %status %percentage (%remaining RM) ]"
        format_down = " [ NULL ]"
        status_chr = "CHR"
        status_bat = "BAT"
        status_unk = "UNK"
        status_idle = "IDLE"
}

load {
        format = "%1min"
}

tztime local {
        format = "[ %Y-%m-%d (%H:%M:%S) ]"
}
